<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../partials/nav') %>

  <main class="flex-1 flex items-center justify-center px-4 py-10">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-6 overflow-y-auto max-h-screen">
      
      <!-- Header -->
      <div class="flex justify-between items-center mb-2">
        <h2 class="text-lg font-semibold text-gray-700">Sign up</h2>
        <a href="/" class="text-gray-400 hover:text-black text-xl font-semibold">âœ•</a>
      </div>

      <!-- Title -->
      <h1 class="text-xl font-bold text-gray-800 mb-4">Register your Account</h1>

      <!-- Form -->
      <form action="/signup" method="POST" class="space-y-4">
        <%- include('../partials/errors.ejs') %>

        <!-- Name Fields -->
        <div class="flex flex-col sm:flex-row gap-3">
          <input
            type="text"
            name="firstName"
            placeholder="First name"
            required
            value="<%= oldInput ? oldInput.firstName : '' %>"
            class="w-full sm:w-1/2 px-4 py-2 border border-gray-300 rounded-lg text-sm placeholder:text-sm focus:outline-none focus:ring-2 focus:ring-red-500"
          />
          <input
            type="text"
            name="lastName"
            placeholder="Last name"
            value="<%= oldInput ? oldInput.lastName : '' %>"
            class="w-full sm:w-1/2 px-4 py-2 border border-gray-300 rounded-lg text-sm placeholder:text-sm focus:outline-none focus:ring-2 focus:ring-red-500"
          />
        </div>

        <!-- Email -->
        <input
          type="email"
          name="email"
          placeholder="Email"
          required
          value="<%= oldInput ? oldInput.email : '' %>"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm placeholder:text-sm focus:outline-none focus:ring-2 focus:ring-red-500"
        />

        <!-- Passwords -->
        <div class="flex flex-col sm:flex-row gap-3">
          <input
            type="password"
            name="password"
            placeholder="Password"
            required
            class="w-full sm:w-1/2 px-4 py-2 border border-gray-300 rounded-lg text-sm placeholder:text-sm focus:outline-none focus:ring-2 focus:ring-red-500"
          />
          <input
            type="password"
            name="confirmPassword"
            placeholder="Confirm"
            required
            class="w-full sm:w-1/2 px-4 py-2 border border-gray-300 rounded-lg text-sm placeholder:text-sm focus:outline-none focus:ring-2 focus:ring-red-500"
          />
        </div>

        <!-- User Type -->
        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
          <span>User Type:</span>
          <label class="flex items-center gap-1">
            <input type="radio" name="userType" value="guest" <% if (oldInput.userType === 'guest') { %> checked <% } %> />
            Guest
          </label>
          <label class="flex items-center gap-1">
            <input type="radio" name="userType" value="host" <% if (oldInput.userType === 'host') { %> checked <% } %> />
            Host
          </label>
        </div>

        <!-- Terms -->
        <label class="flex items-center gap-2 text-sm text-gray-600">
          <input type="checkbox" name="terms" required />
          I accept the terms and conditions
        </label>

        <!-- Submit -->
        <input
          type="submit"
          value="Register"
          class="w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-lg font-semibold transition duration-300"
        />
      </form>

      <!-- Redirect -->
      <p class="text-center text-sm text-gray-600 mt-4">
        Already have an account?
        <a href="/login" class="text-red-500 hover:underline">Login</a>
      </p>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
