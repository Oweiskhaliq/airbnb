<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-2 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-red-500"> Register your Account</h1>
      <form action="/signup" method="POST" class="max-w-md mx-auto">
        <%- include('../partials/errors.ejs') %>
        
        
     <!-- name -->
        <div class="flex space-x-4">
          <input
          type="text"
          name="firstName"
          placeholder="First Name"
          required
          value="<%= oldInput ? oldInput.firstName : '' %>"
          class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-sm  rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>
          <input
          type="text"
          name="lastName"
          placeholder="Last Name"
          value="<%= oldInput ? oldInput.lastName : '' %>"
          class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-sm  rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>
        </div>
          <input
          type="email"
          name="email"
          value="<%= oldInput ? oldInput.email : '' %>"
          placeholder="test@gmail.com"
          class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-sm  rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>
          <!-- password -->
          <div class="flex space-x-4">
            <input
            type="password"
            name="password"
            placeholder="Enter your Password"
            required
           
            class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-sm  rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>
            <input
            type="password"
            name="confirmPassword"
            placeholder="Confirm your Password"
            required
            class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-sm  rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>
          </div>
      
          <div class=" flex space-x-4 mb-4 items-center ">
            <p>UserType:</p>
            <label>
              <input type="radio" value="guest" name="userType" id="guest" class="p-2"  <% if (oldInput.userType === 'guest') { %> checked <% } %> />
              <span>Guest</span>
            </label>
            <label>
              <input type="radio" value="host" name="userType" id="host" class="p-2"  <% if (oldInput.userType === 'host') { %> checked <% } %> />

              <span>Host</span>
            </label>
          </div>
          <div class="p-4 ">
            <input type="checkbox" name="terms" id="terms" class="p-2" required />
            <label for="terms">I accept the terms and conditions</label>
          </div>
        <input type="submit" value="Register" class="w-full  mb-2 bg-red-500 text-white py-1  rounded-lg hover:bg-red-600 transition duration-300" />
           <!-- Redirect to login -->
      <p class="text-center text-gray-600 text-balance mt-5 ">
        Already have an Account? <a href="/login" class="text-red-500 hover:text-red-600 hover:underline-offset-4">Login </a>
      </p>
      </form>
    </main>
  </body>
</html>
