<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 text-gray-800">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-10">
    <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-md overflow-hidden">
      <!-- Header -->
      <div class="px-6 pt-6 text-center">
        <h2 class="text-3xl font-bold text-[#ff385c] mb-4">
          Details of <%= home.houseName %>
        </h2>
      </div>

      <!-- Grid Content -->
      <div class="grid md:grid-cols-2 gap-8 px-6 pb-10">
        <!-- Image -->
        <div class="rounded-xl overflow-hidden">
          <img src="/images/<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-96 object-cover rounded-xl">
        </div>

        <!-- House Info -->
        <div class="space-y-6 text-[15px]">
          <!-- Description -->
          <div>
            <h3 class="text-lg font-semibold mb-1">Description</h3>
            <p class="text-gray-600"><%= home.description %></p>
          </div>

          <!-- Location -->
          <div>
            <h3 class="text-lg font-semibold mb-1">Location</h3>
            <p class="text-gray-600"><%= home.location %></p>
          </div>

          <!-- Price -->
          <div>
            <h3 class="text-lg font-semibold mb-1">Price</h3>
            <p class="text-green-600 font-bold text-xl">$<%= home.price %> <span class="text-base font-normal text-gray-500">/ night</span></p>
          </div>

          <!-- Rating -->
          <div>
            <h3 class="text-lg font-semibold mb-1">Rating</h3>
            <div class="flex items-center">
              <span class="text-yellow-400 text-xl">â˜…</span>
              <span class="ml-2 text-base"><%= home.rating %> / 5</span>
            </div>
          </div>

          <!-- Favourite Button -->
          <div>
            <%- include('../partials/favourite') %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
