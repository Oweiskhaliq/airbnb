<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-2 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-red-500"><%= editing ? "Edit" : "Register"%> Your Home on AirBnB</h1>
      <form action="/host/<%= editing ? "edit-home" : "add-home"%>" method="POST" class="max-w-md mx-auto">
        <input type="hidden" name="id" value="<%= editing ? home._id : ''%>" />
        <input
          type="text"
          name="houseName"
          value="<%= editing ? home.houseName : ''%>"
          placeholder="Enter your House Name"
          class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-base rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>
        
        <input
          type="text"
          name="location"
          value="<%= editing ? home.location : ''%>"
          placeholder="Location"
          class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-base rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>
          <div class="flex space-x-4">
            <input
            type="text"
            name="price"
            value="<%= editing ? home.price : ''%>"
            placeholder="Price Per Night"
            class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-base rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>

            <input
            type="text"
            name="rating"
            value="<%= editing ? home.rating : ''%>"
            placeholder="Rating"
            class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-base rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>

          </div>
       

          <input
          type="text"
          name="photoUrl"
          value="<%= editing ? home.photoUrl : ''%>"
          placeholder="Enter Photo URL"
          class="w-full px-4 py-1 mb-4 border text-sm  placeholder:text-base rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"/>
        
          <textarea
          type="text"
          name="description"
          placeholder="Discribe your Home."
          class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"><%= editing ? home.description : ''%></textarea>

        <input type="submit" value="<%= editing ? "Update Home" : "Add Home"%>" class="w-full  mb-2 bg-red-500 text-white py-1  rounded-lg hover:bg-red-600 transition duration-300" />

      </form>
    </main>
  </body>
</html>
