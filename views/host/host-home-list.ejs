<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 text-gray-800">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-10 max-w-7xl">
    <h2 class="text-3xl font-bold text-center text-[#ff385c] mb-10">
      Hey <%= user.firstName %> Your Home On airbnb 
    </h2>

    <!-- Responsive Grid: 1 col on mobile, 2 on tablet, 4 on desktop -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-2xl shadow hover:shadow-xl transition duration-300 overflow-hidden flex flex-col">
          <!-- Image -->
          <img src="/images/<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">

          <!-- Content -->
          <div class="p-4 flex flex-col flex-grow">
            <h3 class="text-base font-semibold mb-1 truncate"><%= home.houseName %></h3>
            <p class="text-sm text-gray-500 mb-2 flex items-center truncate">
              <i class="fas fa-map-marker-alt text-gray-400 mr-2"></i><%= home.location %>
            </p>

            <div class="flex justify-between items-center mb-3">
              <span class="text-[#ff385c] font-bold text-sm">Rs <%= home.price %> / night</span>
              <div class="flex items-center text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-4 h-4 text-yellow-400 mr-1" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd"/>
                </svg>
                <%= home.rating %>
              </div>
            </div>

            <!-- Buttons -->
            <div class="mt-auto flex gap-2">
              <a href="/host/edit-home/<%=home._id%>?editing=true" class="w-1/2 text-center py-2 rounded-lg bg-blue-500 hover:bg-blue-600 text-white text-xs font-medium">
                Edit
              </a>
              <form action="/host/delete-home/<%= home._id %>" method="POST" class="w-1/2">
                <button type="submit" class="w-full py-2 rounded-lg bg-red-500 hover:bg-red-600 text-white text-xs font-medium">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
